{
  "name": "scriptsxo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:cf": "npx @cloudflare/next-on-pages",
    "deploy": "bash scripts/deploy.sh",
    "deploy:full": "bash scripts/deploy.sh --full",
    "deploy:convex": "bash scripts/deploy.sh --convex-only",
    "deploy:frontend": "bash scripts/deploy.sh --frontend-only",
    "deploy:pages": "npx wrangler pages deploy .vercel/output/static --project-name scriptsxo",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy -y",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen localhost:3000",
    "test:all": "npm run test:run && npm run test:e2e"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "convex": "^1.31.5",
    "framer-motion": "^12.26.2",
    "lucide-react": "^0.562.0",
    "next": "15.5.2",
    "pdf-lib": "^1.17.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.4.0",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@playwright/test": "^1.50.0",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/ui": "^3.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.4.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.0.0"
  }
}
